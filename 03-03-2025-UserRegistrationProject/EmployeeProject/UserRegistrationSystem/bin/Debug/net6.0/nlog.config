<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<!-- Targets: where to write logs -->
	<targets>
		<target name="logfile" xsi:type="File" fileName="logs/app.log" layout="${longdate} | ${level:uppercase=true} | ${message} | ${exception:format=tostring}" />
		<target name="logconsole" xsi:type="Console" layout="${longdate} | ${level:uppercase=true} | ${message} | ${exception:format=tostring}" />
	</targets>

	<!-- Rules: what logs should be written -->
	<rules>
		<logger name="*" minlevel="Info" writeTo="logfile,logconsole" />
	</rules>

</nlog>
